import socket

def connect_to_server():
    client_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    client_socket.connect(("localhost", 5555))  # Connect to server
    return client_socket

def play_game(client_socket):
    while True:
        # Receive and display current player's cards from server
        server_msg = client_socket.recv(1024).decode()
        print(server_msg)
        
        # Make a move
        move = input("Choose a card to play (or type 'exit' to quit): ")
        client_socket.send(move.encode())  # Send move to server
        
        # Receive result
        result = client_socket.recv(1024).decode()
        print(result)
        if move.lower() == "exit":
            break

def main():
    client_socket = connect_to_server()
    play_game(client_socket)
    client_socket.close()

if __name__ == "__main__":
    main()
